{erl_opts, [debug_info]}.
{deps, [
  {jiffy, {git, "https://github.com/davisp/jiffy.git", {tag, "0.14.11"}}},
  {elli, {git, "https://github.com/elli-lib/elli.git", {tag, "2.0.1"}}},
  {jsx, {git, "https://github.com/talentdeficit/jsx.git", {branch, "v2.8.1"}}}
 ]}.

{relx, [ {release
         , {elli_bench, "0.1.0" }
         , [elli_bench, sasl]
         }
       , {sys_config, "./config/sys.config"}
       , {vm_args, "./config/vm.args"}
       , {dev_mode, true}
       , {include_erts, false}
       , {extended_start_script, true}
       ]
}.

{profiles, [ { prod
             , [{ relx
                , [ {dev_mode, false}
                  , {include_erts, true}
                  ]
                }]
             }
           ]
}.
