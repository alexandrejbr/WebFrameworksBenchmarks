{erl_opts, [debug_info]}.
{deps,
 [
  {jiffy, {git, "https://github.com/davisp/jiffy.git", {tag, "0.14.8"}}},
  {elli,  {git, "https://github.com/elli-lib/elli.git", {tag, "2.0.0"}}}
 ]}.

{relx, [{release, {elli_bench, "0.1.0" },
         [elli_bench,
          sasl]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]
}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {include_erts, true}]}]
            }]
}.
        
{overrides,
 [{override, jiffy, [
     {plugins, [pc]},
     {artifacts, ["priv/jiffy.so"]},
     {provider_hooks, [
         {post,
             [
             {compile, {pc, compile}},
             {clean, {pc, clean}}
             ]
          }]
      }
  ]}
]}.
